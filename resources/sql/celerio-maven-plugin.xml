<?xml version="1.0" encoding="UTF-8"?>
<celerio xmlns="http://www.jaxio.com/schema/celerio" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.jaxio.com/schema/celerio ./celerio.xsd">


    <configuration rootPackage="com.mycompany.myapp" applicationName="krmaPortal">
        <!-- Which tables are used for generation -->
        <tables>
            <!-- <table include="false" pattern="*_AUDIT"/> -->
            <table include="false" pattern="jhi_persistent_*"/>
        </tables>

        <!-- global number mapping (optional) -->
        <numberMappings>
            <numberMapping mappedType="M_BOOLEAN" columnSizeMin="1" columnSizeMax="2" columnDecimalDigitsMin="0"
                           columnDecimalDigitsMax="0"/>
            <!-- <numberMapping mappedType="M_BIGDECIMAL" columnSizeMin="10" columnDecimalDigitsMin="4"/> -->
        </numberMappings>

        <!-- global date mapping (optional) -->
        <dateMappings>
            <!-- <dateMapping columnNameRegExp="VERSION" mappedType="M_UTILDATE"/> -->
            <dateMapping columnJdbcType="TIMESTAMP" mappedType="M_INSTANT"/>
            <dateMapping columnJdbcType="DATE" mappedType="M_LOCALDATE"/>
        </dateMappings>

        <headerComment>
            <lines>
                <line>Project home: https://github.com/jaxio/celerio-angular-quickstart</line>
                <line></line>
                <line>Source code generated by Celerio, an Open Source code generator by Jaxio.</line>
                <line>Documentation: http://www.jaxio.com/documentation/celerio/</line>
                <line>Source code: https://github.com/jaxio/celerio/</line>
                <line>Follow us on twitter: @jaxiosoft</line>
                <line>This header can be customized in Celerio conf...</line>
            </lines>
        </headerComment>

    </configuration>



 

    <entityConfigs>
        <entityConfig tableName="USER">
            <columnConfigs>
                <columnConfig columnName="civility" sharedEnumName="Civility"/>
                <columnConfig columnName="country_code" sharedEnumName="CountryCode"/>
                <columnConfig columnName="password" searchField="false" searchResult="false"/>
            </columnConfigs>
        </entityConfig>
        <entityConfig tableName="PASSPORT">
            <columnConfigs>
                <columnConfig columnName="holder_id" associationDirection="BIDIRECTIONAL">
                    <oneToManyConfig var="passportHolder" />
                    <inverseOneToOneConfig var="passport" /><!-- var that is generated on User entity side -->
                </columnConfig>
            </columnConfigs>
        </entityConfig>

        <entityConfig tableName="AUTHOR">
            <columnConfigs>
                <columnConfig columnName="first_name" min="2" searchResult="true" displayOrder="3"/>
                <columnConfig columnName="last_name" min="2" searchResult="true" displayOrder="2"/>
                <columnConfig columnName="civility" sharedEnumName="Civility" searchResult="true" displayOrder="1"/>
                <columnConfig columnName="favorite_author_id" searchResult="true" displayOrder="4"/>
            </columnConfigs>
        </entityConfig>

        <entityConfig tableName="BOOK">
            <columnConfigs>
                <columnConfig columnName="author_id">
                    <!-- will generate the one to many association on the Author side -->
                    <oneToManyConfig elementVar="book" var="books" orphanRemoval="true"/>
                </columnConfig>
                <columnConfig columnName="co_author_id" searchField="false" />
                <columnConfig columnName="extract_binary">
                    <labels>
                        <label lang="fr" value="Extrait (fichier)..."/>
                        <label value="Extract (file)..."/>
                    </labels>
                </columnConfig>
            </columnConfigs>
        </entityConfig>

        <entityConfig tableName="PROJECT">
            <columnConfigs>
                <columnConfig columnName="author_id">
                    <!-- will generate the one to many association on the Author side -->
                    <oneToManyConfig elementVar="project" var="projects" orphanRemoval="true"/>
                </columnConfig>
            </columnConfigs>
        </entityConfig>


     <!-- KRMA Entities -->
        <entityConfig tableName="COMPONENT">
            <columnConfigs>
                <columnConfig columnName="TYPE" sharedEnumName="ComponentType" displayOrder="1"/>
                <columnConfig columnName="TECHNOLOGY" displayOrder="2"/>
                <columnConfig columnName="NAME" displayOrder="3"/>
            </columnConfigs>
        </entityConfig>

        <entityConfig tableName="CONFIGURATION">
            <columnConfigs>
                <columnConfig columnName="KEY" displayOrder="1"/>
                <columnConfig columnName="VALUE" displayOrder="2"/>
                <columnConfig columnName="TYPE" displayOrder="3"/>
                <columnConfig columnName="TOKEN" displayOrder="4"/>
                <columnConfig columnName="DESCRIPTION" displayOrder="5"/>
                <columnConfig columnName="component_id" searchField="false" displayOrder="10">
                    <!-- will generate the one to many association on the Release side -->
                    <oneToManyConfig elementVar="configuration" var="configuration" orphanRemoval="true"/>
                </columnConfig>
                <columnConfig columnName="environment_id" searchField="false" displayOrder="20">
                    <!-- will generate the one to many association on the Release side -->
                    <oneToManyConfig elementVar="configuration" var="configuration" orphanRemoval="true"/>
                </columnConfig>
            </columnConfigs>
        </entityConfig>

        <entityConfig tableName="DEPLOYMENT">
            <columnConfigs>
                <columnConfig columnName="TYPE" sharedEnumName="DeploymentType"/>
                <columnConfig columnName="STATE" sharedEnumName="DeploymentState"/>
                  <columnConfig columnName="release_id">
                    <!-- will generate the one to many association on the Release side -->
                    <oneToManyConfig elementVar="deployment" var="deployment" orphanRemoval="true"/>
                  </columnConfig>
                  <columnConfig columnName="environment_id">
                    <!-- will generate the one to many association on the Environment side -->
                    <oneToManyConfig elementVar="deployment" var="deployment" orphanRemoval="true"/>
                  </columnConfig>
            </columnConfigs>
        </entityConfig>

        <entityConfig tableName="ENVIRONMENT">
            <columnConfigs>
                  <columnConfig columnName="SHORT_NAME"/> 
                  <columnConfig columnName="NAME"/> 
                  <columnConfig columnName="STATE" sharedEnumName="EnvironmentState"/>
                  <columnConfig columnName="TYPE" sharedEnumName="EnvironmentType"/> 
            </columnConfigs>
        </entityConfig>

        <entityConfig tableName="HYPERLINK">
            <columnConfigs>
                  <columnConfig columnName="title" displayOrder="1"/>
                  <columnConfig columnName="url" displayOrder="2"/>
                  <columnConfig columnName="description" displayOrder="3"/>
                  <columnConfig columnName="component_id" searchField="false" displayOrder="4">
                    <!-- will generate the one to many association on the Component side -->
                    <oneToManyConfig elementVar="hyperlink" var="hyperlink" orphanRemoval="true"/>
                  </columnConfig>
                  <columnConfig columnName="deployment_id" searchField="false" displayOrder="5">
                    <!-- will generate the one to many association on the Environment side -->
                    <oneToManyConfig elementVar="hyperlink" var="hyperlink" orphanRemoval="true"/>
                  </columnConfig>
                  <columnConfig columnName="environment_id" searchField="false" displayOrder="6">
                    <!-- will generate the one to many association on the Environment side -->
                    <oneToManyConfig elementVar="hyperlink" var="hyperlink" orphanRemoval="true"/>
                  </columnConfig>
                  <columnConfig columnName="note_entry_id" searchField="false" displayOrder="7">
                    <!-- will generate the one to many association on the Environment side -->
                    <oneToManyConfig elementVar="hyperlink" var="hyperlink" orphanRemoval="true"/>
                  </columnConfig>
                  <columnConfig columnName="package_id" searchField="false" displayOrder="8">
                    <!-- will generate the one to many association on the Package side -->
                    <oneToManyConfig elementVar="hyperlink" var="hyperlink" orphanRemoval="true"/>
                  </columnConfig>
                  <columnConfig columnName="release_id" searchField="false" displayOrder="9">
                    <!-- will generate the one to many association on the Release side -->
                    <oneToManyConfig elementVar="hyperlink" var="hyperlink" orphanRemoval="true"/>
                  </columnConfig>

            </columnConfigs>
        </entityConfig>


        <entityConfig tableName="NOTE">
            <columnConfigs>
                  <columnConfig columnName="release_id">
                    <!-- will generate the one to many association on the Release side -->
                    <oneToManyConfig elementVar="note" var="note" orphanRemoval="true"/>
                  </columnConfig>
                  <columnConfig columnName="component_id">
                    <!-- will generate the one to many association on the Component side -->
                    <oneToManyConfig elementVar="note" var="note" orphanRemoval="true"/>
                  </columnConfig>
            </columnConfigs>
        </entityConfig>

        <entityConfig tableName="PACKAGE" entityName="Package">
            <columnConfigs>
                <columnConfig columnName="TYPE" sharedEnumName="PackageType"/>
            </columnConfigs>
        </entityConfig>

        <entityConfig tableName="RELEASE">
            <columnConfigs>
                <columnConfig columnName="NAME" min="2" searchResult="true" displayOrder="1"/>
                <columnConfig columnName="TYPE" sharedEnumName="ReleaseType" displayOrder="3"/>
                <columnConfig columnName="STATE" sharedEnumName="ReleaseState" displayOrder="4"/>
            </columnConfigs>
        </entityConfig>

    </entityConfigs>

    <!-- CHANGE IT OR COMMENT IT IF YOU USE YOUR OWN DATABASE -->
    <!-- Generate enums used by the entities above -->
    <sharedEnumConfigs>
      <!-- KRMA Enums -->
        <sharedEnumConfig name="ComponentType" type="STRING">
            <enumValues>
                <enumValue value="Application"><labels><label value="Application"/></labels></enumValue>
                <enumValue value="Service"><labels><label value="Service"/></labels></enumValue>
                <enumValue value="System"><labels><label value="System"/></labels></enumValue>
            </enumValues>
        </sharedEnumConfig>
        <sharedEnumConfig name="DeploymentState" type="STRING">
            <enumValues>
                <enumValue value="planned"><labels><label value="Deployment eingeplant"/></labels></enumValue>
                <enumValue value="started"><labels><label value="Deployment begonnen"/></labels></enumValue>
                <enumValue value="finished"><labels><label value="Deployment erledigt"/></labels></enumValue>
                <enumValue value="tested"><labels><label value="Deployment getestet"/></labels></enumValue>
            </enumValues>
        </sharedEnumConfig>        
        <sharedEnumConfig name="DeploymentType" type="STRING">
            <enumValues>
                <enumValue value="NextJenkins"><labels><label value="Next Lab Jenkins"/></labels></enumValue>
                <enumValue value="ForeignJenkins"><labels><label value="Foreign Jenkins"/></labels></enumValue>
                <enumValue value="Manual"><labels><label value="Manuelle Installation"/></labels></enumValue>
            </enumValues>
        </sharedEnumConfig>        
        <sharedEnumConfig name="EnvironmentState" type="STRING">
            <enumValues>
                <enumValue value="planned"><labels><label value="Umgebung in Planung"/></labels></enumValue>
                <enumValue value="creation"><labels><label value="Umgebung im Aufbau"/></labels></enumValue>
                <enumValue value="live"><labels><label value="Umgebung im Betrieb"/></labels></enumValue>
                <enumValue value="retired"><labels><label value="Umgebung ausgeschaltet"/></labels></enumValue>
            </enumValues>
        </sharedEnumConfig>
        <sharedEnumConfig name="EnvironmentType" type="STRING">
            <enumValues>
                <enumValue value="BareMetal"><labels><label value="Bare Metal"/></labels></enumValue>
                <enumValue value="AwsAmi"><labels><label value="AWS AMI"/></labels></enumValue>
                <enumValue value="Docker"><labels><label value="Docker"/></labels></enumValue>
                <enumValue value="VM"><labels><label value="VM"/></labels></enumValue>
                <enumValue value="Hybrid"><labels><label value="Hybrid"/></labels></enumValue>
                <enumValue value="na"><labels><label value="Nicht Verfügbar"/></labels></enumValue>
            </enumValues>
        </sharedEnumConfig>
        <sharedEnumConfig name="PackageType" type="STRING">
            <enumValues>
                <enumValue value="NPM"><labels><label value="NPM"/></labels></enumValue>
                <enumValue value="RPM"><labels><label value="RPM"/></labels></enumValue>
                <enumValue value="JAR"><labels><label value="JAR"/></labels></enumValue>
                <enumValue value="ZIP"><labels><label value="ZIP"/></labels></enumValue>
            </enumValues>
        </sharedEnumConfig>
        <sharedEnumConfig name="ReleaseState" type="STRING">
            <enumValues>
                <enumValue value="Created"><labels><label value="Release angelegt"/></labels></enumValue>
                <enumValue value="Assigned"><labels><label value="Release Pakete zugeordnet"/></labels></enumValue>
                <enumValue value="Checked"><labels><label value="Release Audition abgeschlossen"/></labels></enumValue>
                <enumValue value="Approved"><labels><label value="Release genehmigt"/></labels></enumValue>
                <enumValue value="Delivered"><labels><label value="Release ausgeliefert"/></labels></enumValue>
                <enumValue value="Live"><labels><label value="Release getestet"/></labels></enumValue>
                <enumValue value="Postponed"><labels><label value="Release verschoben"/></labels></enumValue>
            </enumValues>
        </sharedEnumConfig>
        <sharedEnumConfig name="ReleaseType" type="STRING">
            <enumValues>
                <enumValue value="Hotfix"><labels><label value="Notfall Hotfix"/></labels></enumValue>
                <enumValue value="Release"><labels><label value="Geplante Lieferung"/></labels></enumValue>
                <enumValue value="Maintenance"><labels><label value="Wartungs-Lieferung"/></labels></enumValue>
            </enumValues>
        </sharedEnumConfig>


        <sharedEnumConfig name="Civility" type="STRING">
            <enumValues>
                <enumValue value="MR">
                    <labels>
                        <label value="Mister"/>
                        <label value="Monsieur" lang="fr"/>
                    </labels>
                </enumValue>
                <enumValue value="MS">
                    <labels>
                        <label value="Miss"/>
                        <label value="Madame" lang="fr"/>
                    </labels>
                </enumValue>
            </enumValues>
        </sharedEnumConfig>
        <sharedEnumConfig name="CountryCode" type="CUSTOM">
            <enumValues>
                <enumValue name="FRANCE" value="+33">
                    <labels>
                        <label value="France"/>
                        <label value="France" lang="fr"/>
                    </labels>
                </enumValue>
                <enumValue name="ITALY" value="+39">
                    <labels>
                        <label value="Italy"/>
                        <label value="Italie" lang="fr"/>
                    </labels>
                </enumValue>
                <enumValue name="USA" value="+1">
                    <labels>
                        <label value="United-States"/>
                        <label value="Etats-Unis" lang="fr"/>
                    </labels>
                </enumValue>
            </enumValues>
        </sharedEnumConfig>

    </sharedEnumConfigs>
</celerio>