<customize>
    <repeats>
        <repeat file="sql\KRMA.SQL">
            <replace>	`ID` DECIMAL(10,0) NOT NULL COMMENT 'GENERATED AS IDENTITY,',</replace>
            <with>	`ID` int not null IDENTITY,</with>
        </repeat>
        <repeat file="sql\KRMA.SQL">
            <replace>SET FOREIGN_KEY_CHECKS=0 </replace>
            <with>
/* sets a h2 db into mysql mode */
SET MODE MySQL;

SET FOREIGN_KEY_CHECKS=0
            </with>
        </repeat>        
    </repeats>
    <sets>
        <set file="\img\*.*">
            <copy to="tmpl\celerio\pack-angular\src\main\resources\static\img"/>
        </set>
        <set file="tmpl\celerio\pack-angular\web\src\app\app.component.ts.p.vm">
            <replace>
                    {label: '${entity.model.type} Search', routerLink: ['/${entity.model.var}-list']},
                    {label: '${entity.model.type} Create', routerLink: ['/${entity.model.var}/new']}#if($velocityHasNext),
        </replace>
            <with>
                    {label: '${entity.model.type}', routerLink: ['/${entity.model.var}-list']}#if($velocityHasNext),
            </with>
        </set>
        <set file="tmpl\celerio\pack-angular\web\src\app\app.component.ts.p.vm">
            <replace>
                <div class="ui-g-12 ui-md-1">The West...</div>
            </replace>
            <with>
                <div class="ui-g-12 ui-md-1">
                    <img src="/img/KRMA_Logo.png" width="70px" />
                    <img src="/img/db_em_rgb_100px.svg" width="auto" height="50px"/>
                    <img src="/img/nextlab.png" width="70px" />
                </div>
            </with>
        </set>
        <set file="tmpl\celerio\pack-angular\web\proxy.conf.json">
            <replace>8080</replace>
            <with>8585</with>
        </set>
        <set file="tmpl\celerio\pack-angular\src\main\resources\application.yml.p.vm">
            <replace>8080</replace>
            <with>8585</with>
        </set>
        <set file="tmpl\celerio\pack-angular\web\src\app\home.component.html.p.vm">
            <replace>
                <h1>Welcome to app!</h1>
                <h4>This is the home component...</h4>
                <p>This CRUD web application was generated by Celerio. It leverages state of the art technology.</p>
                <p style="background-color: yellow;">Click on the 'Entities' menu to access the data...</p>
            </replace>
            <with>
                <h1>Welcome to the KRMA-Portal</h1>
            </with>
        </set>
        <set file="tmpl\celerio\pack-angular\web\src\styles.css">
            <replace>
                    @import '~font-awesome/css/font-awesome.css';
                </replace>
            <with>
                    @import '~font-awesome/css/font-awesome.css';

                    body {
                        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
                    }
                </with>
        </set>
    </sets>
</customize>